<Window x:Class="Flavouru.Desktop.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация в Flavouru" Height="350" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Имя пользователя:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,10"/>
            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>
            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,10"/>
            <TextBlock Text="Подтвердите пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtConfirmPassword" Margin="0,0,0,20"/>
            <Button Content="Зарегистрироваться" Width="150" Height="30" Click="btnRegister_Click"/>
        </StackPanel>
    </Grid>
</Window>

