<Window x:Class="Flavouru.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Flavouru.Desktop.UserControls"
        Title="Flavouru - Менеджер рецептов" Height="600" Width="800"
        Background="#F0F0F0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="White" Margin="10" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="txtWelcome" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <Button x:Name="btnRecipes" Content="Рецепты" Width="100" Click="btnRecipes_Click" Margin="0,0,10,0"/>
                <Button x:Name="btnAddRecipe" Content="Добавить рецепт" Width="120" Click="btnAddRecipe_Click" Margin="0,0,10,0"/>
                <Button x:Name="btnCategories" Content="Категории" Width="100" Click="btnCategories_Click" Margin="0,0,10,0"/>
                <Button x:Name="btnTags" Content="Теги" Width="80" Click="btnTags_Click" Margin="0,0,10,0"/>
                <Button x:Name="btnLogout" Content="Выйти" Width="80" Click="btnLogout_Click"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" x:Name="contentGrid">
            <local:RecipesUserControl x:Name="recipesControl" Visibility="Collapsed"/>
            <local:AddRecipeUserControl x:Name="addRecipeControl" Visibility="Collapsed"/>
            <local:CategoriesUserControl x:Name="categoriesControl" Visibility="Collapsed"/>
            <local:TagsUserControl x:Name="tagsControl" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>

