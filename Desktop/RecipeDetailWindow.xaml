<Window x:Class="Flavouru.Desktop.RecipeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали рецепта" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock x:Name="txtTitle" FontSize="24" FontWeight="Bold"/>
            <TextBlock x:Name="txtDescription" TextWrapping="Wrap" Margin="0,10"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Время подготовки: "/>
                <TextBlock x:Name="txtPrepTime"/>
                <TextBlock Text=" мин, Время готовки: "/>
                <TextBlock x:Name="txtCookTime"/>
                <TextBlock Text=" мин, Порции: "/>
                <TextBlock x:Name="txtServings"/>
            </StackPanel>
            <TextBlock Text="Категории:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock x:Name="txtCategories"/>
            <TextBlock Text="Теги:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock x:Name="txtTags"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="10">
            <TextBlock x:Name="txtInstructions" TextWrapping="Wrap"/>
        </ScrollViewer>

        <TextBlock Grid.Row="2" Text="Комментарии:" FontWeight="Bold" Margin="10"/>

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListBox x:Name="commentsListBox" Grid.Row="0" Margin="10,0,10,10"/>

            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtNewComment" Grid.Column="0"/>
                <Button Content="Отправить" Grid.Column="1" Margin="10,0,0,0" Click="btnSendComment_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>

