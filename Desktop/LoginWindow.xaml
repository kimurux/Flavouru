<Window x:Class="Flavouru.Desktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в Flavouru" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Имя пользователя:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,10"/>
            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,20"/>
            <Button Content="Войти" Width="100" Height="30" Click="btnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>

