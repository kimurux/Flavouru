<Window x:Class="Flavouru.Desktop.RecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали рецепта" Height="700" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/Image/bg.png" Opacity="0.15" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Border Background="{StaticResource SecondaryBackground}" 
                Margin="20" 
                CornerRadius="8" 
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Direction="315" Opacity="0.1" BlurRadius="8"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30,25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,25">
                        <Image Source="/Image/recipe.png" Width="60" Height="60" HorizontalAlignment="Left"/>
                        <TextBlock Text="Создание рецепта" 
                                   Style="{StaticResource HeaderTextStyle}" 
                                   Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Recipe Name -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Название:" 
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             x:Name="txtTitle" 
                             Margin="0,0,0,15"/>

                    <!-- Recipe Description -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Описание:" 
                               VerticalAlignment="Top"
                               Margin="0,10,0,0"
                               FontWeight="Medium"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             x:Name="txtDescription" 
                             Height="80" 
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>

                    <!-- Recipe Instructions -->
                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Инструкции:" 
                               VerticalAlignment="Top"
                               Margin="0,10,0,0"
                               FontWeight="Medium"/>
                    <TextBox Grid.Row="3" Grid.Column="1" 
                             x:Name="txtInstructions" 
                             Height="180" 
                             AcceptsReturn="True" 
                             TextWrapping="Wrap" 
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>

                    <!-- Recipe Metrics -->
                    <TextBlock Grid.Row="4" Grid.Column="0" 
                               Text="Детали:" 
                               VerticalAlignment="Top"
                               Margin="0,10,0,0"
                               FontWeight="Medium"/>
                    <Grid Grid.Row="4" Grid.Column="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Prep Time -->
                        <Border Grid.Column="0" 
                                Background="#FFF8F3" 
                                BorderBrush="{StaticResource BorderBrush}" 
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="0,0,10,0"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Время подготовки (мин):" 
                                           FontSize="12" 
                                           Foreground="{StaticResource SecondaryText}"/>
                                <TextBox x:Name="txtPrepTime" 
                                         Background="Transparent" 
                                         BorderThickness="0" 
                                         Padding="0,5,0,0"
                                         FontSize="16"/>
                            </StackPanel>
                        </Border>

                        <!-- Cook Time -->
                        <Border Grid.Column="1" 
                                Background="#FFF8F3" 
                                BorderBrush="{StaticResource BorderBrush}" 
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="5,0,5,0"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Время готовки (мин):" 
                                           FontSize="12" 
                                           Foreground="{StaticResource SecondaryText}"/>
                                <TextBox x:Name="txtCookTime" 
                                         Background="Transparent" 
                                         BorderThickness="0" 
                                         Padding="0,5,0,0"
                                         FontSize="16"/>
                            </StackPanel>
                        </Border>

                        <!-- Servings -->
                        <Border Grid.Column="2" 
                                Background="#FFF8F3" 
                                BorderBrush="{StaticResource BorderBrush}" 
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="10,0,0,0"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Количество порций:" 
                                           FontSize="12" 
                                           Foreground="{StaticResource SecondaryText}"/>
                                <TextBox x:Name="txtServings" 
                                         Background="Transparent" 
                                         BorderThickness="0" 
                                         Padding="0,5,0,0"
                                         FontSize="16"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Categories -->
                    <TextBlock Grid.Row="5" Grid.Column="0" 
                               Text="Категории:" 
                               VerticalAlignment="Top"
                               Margin="0,5,0,0"
                               FontWeight="Medium"/>
                    <ListBox Grid.Row="5" Grid.Column="1" 
                             x:Name="lstCategories" 
                             SelectionMode="Multiple" 
                             Height="120"
                             Margin="0,0,0,15"/>

                    <!-- Tags -->
                    <TextBlock Grid.Row="6" Grid.Column="0" 
                               Text="Теги:" 
                               VerticalAlignment="Top"
                               Margin="0,5,0,0"
                               FontWeight="Medium"/>
                    <ListBox Grid.Row="6" Grid.Column="1" 
                             x:Name="lstTags" 
                             SelectionMode="Multiple" 
                             Height="120"
                             Margin="0,0,0,20"/>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button Content="Отмена" 
                                Width="100" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,15,0" 
                                Click="btnCancel_Click"/>
                        <Button Content="Сохранить" 
                                Width="100" 
                                Click="btnSave_Click"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>